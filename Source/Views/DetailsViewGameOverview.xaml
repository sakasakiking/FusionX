<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{DynamicResource DetailsScrollViewer}"
                                  d:DesignWidth="1280"
                                  d:DesignHeight="1280"
                                  d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                  x:Name="PART_ScrollViewHost">
                        <Grid>
                            <FadeImage x:Name="PART_ImageBackground" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Top">
                                <FadeImage.ImageOpacityMask>
                                    <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                        <RadialGradientBrush.GradientStops>
                                            <GradientStop Color="Black" Offset="0.3" />
                                            <GradientStop Color="Transparent" Offset="1" />
                                        </RadialGradientBrush.GradientStops>
                                    </RadialGradientBrush>
                                </FadeImage.ImageOpacityMask>
                            </FadeImage>

                            <Grid HorizontalAlignment="Stretch" Margin="64,0,64,0" MaxWidth="1200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,24">
                                    <Border Margin="48,16,0,0" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="300">
                                        <Image Name="PART_ImageCover" VerticalAlignment="Top" 
                                               HorizontalAlignment="Center" MaxWidth="300"
                                               Height="{Settings GameDetailsCoverHeight}"
                                               StretchDirection="Both" Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="Fant" >
                                            <Image.OpacityMask>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Border Background="Black" CornerRadius="8"
                                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Image}}"
                                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Image}}" />
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Image.OpacityMask>
                                        </Image>
                                    </Border>
                                    
                                    <!--<Image Name="PART_ImageIcon" MaxWidth="300" MaxHeight="120" 
                                               HorizontalAlignment="left" DockPanel.Dock="Top" RenderOptions.BitmapScalingMode="Fant" Margin="0,0,0,16"/>-->

                                    <StackPanel DockPanel.Dock="Top" MinWidth="300">
                                        <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid" Margin="0,16,0,16"
                                                VerticalAlignment="Top" HorizontalAlignment="Left"
                                                MaxHeight="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxHeight, FallbackValue=0}"
                                                MaxWidth="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxWidth, FallbackValue=0}"
                                                Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false" >
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                        </Border>

                                        <TextBlock Name="PART_TextDisplayName" FontFamily="{DynamicResource FontFamily}"
                                                   FontSize="{DynamicResource FontSizeLarge32}" FontWeight="Black"
                                                   Margin="0,0,0,16" TextWrapping="Wrap" HorizontalAlignment="Left"
                                                   Foreground="{DynamicResource SelectedBrush}"/>

                                        <WrapPanel Margin="0,0,0,24" MinWidth="300">
                                            <StackPanel Name="PART_ElemGenres" Margin="0,0,16,0"
                                                        VerticalAlignment="Top" HorizontalAlignment="Left">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Settings DetailsVisibility.Genres}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Grid>
                                                    <Border BorderBrush="{DynamicResource ControlIdleBorderBrush}"
                                                            BorderThickness="0,0,1,0"/>
                                                    <ItemsControl ItemsSource="{Binding Game.Genres}" Margin="0,0,8,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding Name}" Style="{DynamicResource PropertyItemSmallButton}" Margin="0,2,8,2"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}"
                                    CommandParameter="{Binding}"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                            </StackPanel>
                                            <StackPanel Name="PART_ElemPlatform" Margin="0,0,16,0"
                                                        VerticalAlignment="Top" HorizontalAlignment="Left">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Settings DetailsVisibility.Genres}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Grid>
                                                    <Border BorderBrush="{DynamicResource ControlIdleBorderBrush}"
                                                            BorderThickness="0,0,1,0"/>
                                                    <ItemsControl ItemsSource="{Binding Game.Platforms}" Margin="0,0,8,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding Name}" Style="{DynamicResource PropertyItemSmallButton}" Margin="0,2,8,2"            
                                     Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}"                                                                              
                                     CommandParameter="{Binding}"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                            </StackPanel>
                                            <Button Name="PART_ButtonReleaseDate"
                                                    Margin="0,2,16,2" Style="{DynamicResource PropertyItemSmallButton}"/>
                                        </WrapPanel>
                                    </StackPanel>
                                    

                                        
                                </DockPanel>

                                <DockPanel Grid.Row="2" LastChildFill="True">
                                    <StackPanel DockPanel.Dock="Right" Width="300" Margin="48,-52,0,0">

                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Button Name="PART_ButtonPlayAction" Grid.Column="0" Grid.Row="1"
                                                    Height="48" Width="Auto" FontWeight="Bold"
                                                    Style="{DynamicResource PlayButton_LeftPart}" 
                                                    FontSize="{DynamicResource FontSizeLarge20}" />

                                            <Button Name="PART_ButtonContextAction" Grid.Column="0" Grid.Row="1"
                                                    Height="48" FontWeight="SemiBold" 
                                                    Background="{DynamicResource AccentDisabledBrush}"
                                                    Style="{DynamicResource PlayButton_LeftPart}" 
                                                    FontSize="{DynamicResource FontSizeLarge20}" />

                                            <Button Name="PART_ButtonMoreActions" Margin="1,0,0,0" 
                                                    Height="48" Width="48" Grid.Column="1" Grid.Row="1"
                                                    Content="&#xe011;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                                    Style="{DynamicResource PlayButton_RightPart}" 
                                                    FontSize="{DynamicResource FontSizeLarge20}"/>

                                            <StackPanel Grid.ColumnSpan="2" Grid.Row="0" Orientation="Horizontal" Margin="16,0,16,16"
                                                        HorizontalAlignment="Right">

                                                <ToggleButton Name="GameFavoriteToggleButton" Margin="16,0,0,0" Focusable="False"
                                                              Style="{DynamicResource FavoriteToggleButton}"
                                                              Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin}"
                                                              IsChecked="{PluginSettings Plugin=ThemeExtras, Path=Game.Favorite, Mode=TwoWay, FallbackValue={StaticResource False}}"/>
                                                <Button x:Name="PART_ButtonEditGame" Margin="16,0,0,0" 
                                                        Height="36" Width="36" Focusable="False"
                                                        Content="&#xf8b0;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                                        Style="{StaticResource LightFilledRoundButton}"
                                                        FontSize="{DynamicResource FontSizeLarge}"/>
                                            </StackPanel>

                                        </Grid>

                                        <Grid Margin="4,0,4,24">
                                            <Grid.Resources>
                                                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                    <Setter Property="Margin" Value="0,2,0,2" />
                                                    <Setter Property="Foreground" Value="{DynamicResource IdleBrush}" />
                                                    <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}" />
                                                </Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                    <Setter Property="FontSize" Value="{DynamicResource FontSize}" />
                                                </Style>
                                            </Grid.Resources>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <DockPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock Text="&#xe163;" FontSize="24" DockPanel.Dock="Left" Margin="0,10,8,0"
                                                           FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                                                <Label Name="PART_ElemLastPlayed" Content="{DynamicResource LOCLastPlayed}"  
                                                       DockPanel.Dock="Top"/>
                                                <TextBlock Name="PART_TextLastActivity" DockPanel.Dock="Top" FontWeight="Bold"/>
                                            </DockPanel>

                                            <DockPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock Text="&#xed5a;" FontSize="24" DockPanel.Dock="Left" Margin="0,10,8,0"  
                                                           FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"/>
                                                <Label Name="PART_ElemPlayTime" Content="{DynamicResource LOCTimePlayed}" 
                                                       DockPanel.Dock="Top"/>
                                                <TextBlock Name="PART_TextPlayTime" DockPanel.Dock="Top" FontWeight="Bold"/>
                                            </DockPanel>
                                        </Grid>

                                        <!-- HowLongToBeat progress bar -->
                                        <StackPanel Visibility="{PluginSettings Plugin=HowLongToBeat, Path=EnableIntegrationProgressBar, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Visibility="{Binding ElementName=HowLongToBeat_PluginProgressBar, Path=Content.Visibility}" >
                                                <Separator Background="{DynamicResource PanelSeparatorBrush}" Margin="0,0,0,24"/>
                                                <DockPanel>
                                                    <ContentControl x:Name="HowLongToBeat_PluginButton" DockPanel.Dock="Right"/>
                                                    <TextBlock Text="{DynamicResource LOCHowLongToBeat}" DockPanel.Dock="Left" VerticalAlignment="Center"
                                                               Style="{DynamicResource BaseTextBlockStyle}" FontWeight="Bold" FontSize="16"/>
                                                </DockPanel>
                                                <ContentControl x:Name="HowLongToBeat_PluginProgressBar" Margin="0,16,0,24" 
                                                                TextBlock.FontSize="{DynamicResource FontSize}" Height="24"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- SuccessStory -->
                                        <StackPanel Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, Mode=OneWay, FallbackValue={x:Static Visibility.Collapsed}}">
                                            <Separator Background="{DynamicResource PanelSeparatorBrush}" Margin="0,0,0,24"/>
                                            <DockPanel Margin="0,0,0,24">
                                                <ContentControl x:Name="SuccessStory_PluginCompactList" DockPanel.Dock="Bottom" Margin="0,16,0,0" />
                                                <ContentControl x:Name="SuccessStory_PluginProgressBar" DockPanel.Dock="Bottom" Margin="0,16,0,0" VerticalAlignment="Center" Height="24"/>
                                                <ContentControl x:Name="SuccessStory_PluginButton" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                <TextBlock Text="{DynamicResource LOCSuccessStoryAchievements}" DockPanel.Dock="Left" VerticalAlignment="Center"
                                                           Style="{DynamicResource BaseTextBlockStyle}" FontWeight="Bold" FontSize="16"/>
                                            </DockPanel>
                                        </StackPanel>





                                        <Separator Background="{DynamicResource PanelSeparatorBrush}" Margin="0,0,0,24"/>

                                        <StackPanel Margin="0,0,0,24">
                                            <StackPanel.Resources>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="TextBlock.TextAlignment" Value="Right"/>
                                                </Style>
                                                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                    <Setter Property="Margin" Value="0,4,24,4" />
                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                    <Setter Property="Foreground" Value="{DynamicResource IdleBrush}" />
                                                    <Setter Property="MaxWidth" Value="140"/>
                                                </Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="TextBlock.TextAlignment" Value="Right"/>
                                                </Style>
                                            </StackPanel.Resources>

                                            <GridEx Margin="4,0,4,0" ColumnCount="2" StarColumns="1" 
                                                    RowCount="25" AutoLayoutColumns="2">
                                                <Grid.Resources>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" >
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </Grid.Resources>

                                                <Label Name="PART_ElemAdded" Content="{DynamicResource LOCDateAddedLabel}" />
                                                <TextBlock Name="PART_TextAdded" VerticalAlignment="Center" />

                                                <!--<Label Name="PART_ElemPlayTime" Content="{DynamicResource LOCTimePlayed}" />
                                                <TextBlock Name="PART_TextPlayTime" VerticalAlignment="Center" />-->

                                                <!--<Label Name="PART_ElemLastPlayed" Content="{DynamicResource LOCLastPlayed}" />
                                                <TextBlock Name="PART_TextLastActivity" VerticalAlignment="Center" />-->

                                                <Label Name="PART_ElemRecentActivity" Content="{DynamicResource LOCRecentActivityLabel}" />
                                                <TextBlock Name="PART_TextRecentActivity" VerticalAlignment="Center" />

                                                <Label Name="PART_ElemCompletionStatus" Content="{DynamicResource LOCCompletionStatus}" />
                                                <Button Name="PART_ButtonCompletionStatus" VerticalAlignment="Center" />

                                                <Label Name="PART_ElemInstallDirectory" Content="{DynamicResource LOCGameInstallDirTitle}" />
                                                <Button Name="PART_ButtonInstallDirectory" VerticalAlignment="Center" />

                                                <Label Name="PART_ElemInstallSize" Content="{DynamicResource LOCInstallSizeLabel}" />
                                                <TextBlock Name="PART_TextInstallSize" VerticalAlignment="Center" />

                                                <Label Name="PART_ElemLibrary" Content="{DynamicResource LOCGameProviderTitle}" />
                                                <Button Name="PART_ButtonLibrary" VerticalAlignment="Center" />

                                                <!--<Label Name="PART_ElemPlatform" Content="{DynamicResource LOCPlatformTitle}" />
                                                <ItemsControl Name="PART_ItemsPlatforms" />-->

                                                <!--<Label Name="PART_ElemGenres" Content="{DynamicResource LOCGenreLabel}" />
                                                <ItemsControl Name="PART_ItemsGenres"  />-->

                                                <Label Name="PART_ElemDevelopers" Content="{DynamicResource LOCDeveloperLabel}" />
                                                <ItemsControl Name="PART_ItemsDevelopers" />

                                                <Label Name="PART_ElemPublishers" Content="{DynamicResource LOCPublisherLabel}" />
                                                <ItemsControl Name="PART_ItemsPublishers" />

                                                <!--<Label Name="PART_ElemReleaseDate" Content="{DynamicResource LOCGameReleaseDateTitle}" />
                                                <Button Name="PART_ButtonReleaseDate" VerticalAlignment="Center" />-->

                                                <Label Name="PART_ElemCategories" Content="{DynamicResource LOCGameCategoriesTitle}" />
                                                <ItemsControl Name="PART_ItemsCategories" />

                                                <Label Name="PART_ElemFeatures" Content="{DynamicResource LOCFeaturesLabel}" />
                                                <ItemsControl Name="PART_ItemsFeatures" />

                                                <Label Name="PART_ElemTags" Content="{DynamicResource LOCTagsLabel}" />
                                                <ItemsControl Name="PART_ItemsTags" />

                                                <Label Name="PART_ElemAgeRating" Content="{DynamicResource LOCAgeRatingLabel}" />
                                                <ItemsControl Name="PART_ItemsAgeRatings" />

                                                <Label Name="PART_ElemSeries" Content="{DynamicResource LOCSeriesLabel}" />
                                                <ItemsControl Name="PART_ItemsSeries" />

                                                <Label Name="PART_ElemSource" Content="{DynamicResource LOCSourceLabel}" />
                                                <Button Name="PART_ButtonSource" VerticalAlignment="Center" />

                                                <Label Name="PART_ElemRegion" Content="{DynamicResource LOCRegionLabel}" />
                                                <ItemsControl Name="PART_ItemsRegions" />

                                                <Label Name="PART_ElemVersion" Content="{DynamicResource LOCVersionLabel}" />
                                                <Button Name="PART_ButtonVersion" VerticalAlignment="Center" />

                                                <Label Name="PART_ElemCommunityScore" Content="{DynamicResource LOCCommunityScore}" />
                                                <TextBlock Name="PART_TextCommunityScore" VerticalAlignment="Center"
                                                           TextAlignment="Right" Style="{DynamicResource TextBlockGameScore}" />

                                                <Label Name="PART_ElemCriticScore" Content="{DynamicResource LOCCriticScore}" />
                                                <TextBlock Name="PART_TextCriticScore" VerticalAlignment="Center"
                                                           TextAlignment="Right" Style="{DynamicResource TextBlockGameScore}" />

                                                <Label Name="PART_ElemUserScore" Content="{DynamicResource LOCUserScore}" />
                                                <TextBlock Name="PART_TextUserScore" VerticalAlignment="Center"
                                                           TextAlignment="Right" Style="{DynamicResource TextBlockGameScore}" />

                                                <Label Name="PART_ElemLinks" Content="{DynamicResource LOCLinksLabel}" />
                                                <ItemsControl Name="PART_ItemsLinks" />
                                            </GridEx>
                                        </StackPanel>

                                    </StackPanel>

                                    <StackPanel DockPanel.Dock="Left">
                                        <Border Panel.ZIndex="99" Margin="0,0,0,32" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}" Value="True">
                                                            <Setter Property="Control.Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableAlternativeDetailsVideoPlayer, FallbackValue=False}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControl">
                                                <ContentControl.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Border Background="Black" CornerRadius="16"
                                                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </ContentControl.OpacityMask>
                                            </ContentControl>
                                        </Border>

                                        <!-- ScreenshotsVisualizer -->
                                        <!--<ContentControl x:Name="ScreenshotsVisualizer_PluginSinglePicture" />
<ContentControl x:Name="ScreenshotsVisualizer_PluginListScreenshots" />-->

                                        <TabControl Margin="0,0,0,16" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                                     Style="{StaticResource DetailViewTabControl}">

                                            <TabItem Header="{DynamicResource LOCGameDescriptionTitle}" x:Name="DescriptionTab" FontSize="16">
                                                <StackPanel  Margin="0,16,0,0" x:Name="DescriptionContent">

                                                    <StackPanel Name="PART_ElemDescription">
                                                        <HtmlTextView Name="PART_HtmlDescription"
                                                            Margin="0,0,0,0"
                                                            HtmlFontSize="{DynamicResource FontSize}"
                                                            HtmlFontFamily="{DynamicResource FontFamily}"
                                                            HtmlForeground="{DynamicResource TextColor}"
                                                            LinkForeground="{DynamicResource AccentSelectedColor}"                                      
                                                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                            ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </TabItem>

                                            <TabItem Header="{DynamicResource LOCNotesLabel}" FontSize="16">
                                                <TabItem.Style>
                                                    <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=PART_TextNotes, Path=Text, Converter={StaticResource StringNullOrEmptyToBoolConverter}}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{PluginSettings Plugin=PlayNotes, Path=IsControlVisible, FallbackValue=False}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TabItem.Style>

                                                <StackPanel Margin="0,16,0,0">
                                                    <TextBox Name="PART_TextNotes" Background="Transparent" Margin="0" Padding="0"
                                                     IsReadOnly="True" BorderThickness="0" AcceptsReturn="True" TextWrapping="Wrap" />
                                                    <ContentControl x:Name="PlayNotes_NotesViewerControl"
                                                            Visibility="{PluginSettings Plugin=PlayNotes, Path=IsControlVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" />
                                                </StackPanel>
                                            </TabItem>

                                            <TabItem Header="{DynamicResource LOCSuccessStoryAchievements}" FontSize="16"
                                                     Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel Margin="0,16,0,0">
                                                    <ContentControl x:Name="SuccessStory_PluginCompactUnlocked" Margin="0,0,0,24" />
                                                    <ContentControl x:Name="SuccessStory_PluginCompactLocked" Margin="0,0,0,24" />
                                                    <ContentControl x:Name="SuccessStory_PluginUserStats" Margin="0,0,0,24" />
                                                    <ContentControl x:Name="SuccessStory_PluginList" Margin="0,0,0,24" MinHeight="300"  />
                                                    <ContentControl x:Name="SuccessStory_PluginChart" Margin="0,0,0,24" />
                                                </StackPanel>
                                            </TabItem>

                                            <TabItem Header="{DynamicResource LOCSsvTitle}" FontSize="16" 
                                                     Visibility="{PluginSettings Plugin=ScreenshotsVisualizer, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel Orientation="Vertical" Background="{TemplateBinding Background}" Margin="0,16,0,0">
                                                    <ContentControl x:Name="ScreenshotsVisualizer_PluginListScreenshotsVertical" Margin="0,0,0,0" Height="500"/>
                                                </StackPanel>
                                            </TabItem>

                                        </TabControl>
                                    </StackPanel>
                                    

                                        <!--<StackPanel Margin="0,24,0,0" Visibility="{Binding ElementName=GameRelationsVisibilityProxy, Path=Tag}">

                                            <TextBlock Text="{DynamicResource LOCGameRelations_RelatedGamesLabel}" Margin="0,0,0,16"
                                                       FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"
                                                       Foreground="{DynamicResource SelectedBrush}"/>

                                            <TextBlock x:Name="GameRelationsVisibilityProxy" Visibility="Collapsed">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Tag" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SimilarGamesControl, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Tag" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameSeriesControl, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Tag" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameDeveloperControl, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Tag" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SamePublisherControl, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Tag" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Expander x:Name="Panel_GameRelations_SimilarGamesControl"
                        Header="{DynamicResource LOCGameRelations_SimilarGamesLabel}"
                        IsExpanded="True"
                        Margin="0,8,0,0"
                        Visibility="{PluginSettings Plugin=GameRelations, Path=SimilarGamesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                <ContentControl x:Name="GameRelations_SimilarGamesControl" Margin="0,16,0,0" />
                                            </Expander>

                                            <Expander x:Name="Panel_GameRelations_SameSeriesControl"
                          Header="{DynamicResource LOCGameRelations_SameSeriesLabel}"
                          IsExpanded="True"
                          Margin="0,8,0,0"
                          Visibility="{PluginSettings Plugin=GameRelations, Path=SameSeriesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                <ContentControl x:Name="GameRelations_SameSeriesControl" Margin="0,16,0,0" />
                                            </Expander>

                                            <Expander x:Name="Panel_GameRelations_SameDeveloperControl"

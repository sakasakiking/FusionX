<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">

    <Style TargetType="{x:Type GridViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewGameOverview}">
                    <Border x:Name="GridtoDetailBorder" Padding="0" BorderBrush="{DynamicResource PanelSeparatorBrush}"
                            d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="1,0,0,0" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Settings GridViewDetailsPosition}" Value="Left">
                                        <Setter Property="BorderThickness" Value="0,0,1,0" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Settings ShowPanelSeparators}" Value="False">
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>


                        <DockPanel>
                            <Grid DockPanel.Dock="Top">

                                <!--Detailed GridOverview-->
                                <DockPanel>
                                    <DockPanel.Style>
                                        <Style TargetType="DockPanel">
                                            <Style.Triggers>
                                                <Trigger Property="DataContext" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DockPanel.Style>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Margin="0,0,0,64">
                                            <Grid.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0.9">
                                                    <GradientStop Offset="0" Color="#00000000" />
                                                    <GradientStop Offset="1" Color="#FF000000" />
                                                </LinearGradientBrush>
                                            </Grid.OpacityMask>
                                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Grid.Row="0"
                                                    Style="{DynamicResource DetailsScrollViewer}" d:DesignWidth="1280" d:DesignHeight="1280"
                                                    d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}" x:Name="PART_ScrollViewHost">
                                                <Grid Margin="0,0,0,40">
                                                    <Grid x:Name="HeroBanner" VerticalAlignment="Top">
                                                        <Grid.OpacityMask>
                                                            <ImageBrush ImageSource="../Images/Hero-mask.png" />
                                                        </Grid.OpacityMask>
                                                        <FadeImage x:Name="PART_ImageBackground" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="top" />
                                                        <Grid x:Name="GameVideo">
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Width" Value="Auto" />
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Setter Property="Margin" Value="0,0,0,0" />
                                                                    <Setter Property="Opacity" Value="1" />
                                                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=HeroVideoOnOffTogglePlayer, Path=IsChecked}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding ElementName=HeroVideoMiniTogglePlayer, Path=IsChecked}" Value="False">
                                                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                                                            <Setter Property="VerticalAlignment" Value="Top" />
                                                                            <Setter Property="Width" Value="500" />
                                                                            <Setter Property="Margin" Value="0,80,40,0" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>


                                                            <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControl">
                                                                <ContentControl.Template>
                                                                    <ControlTemplate TargetType="ContentControl">
                                                                        <Viewbox Stretch="UniformToFill" VerticalAlignment="Top">
                                                                            <Grid>
                                                                                <ContentPresenter />
                                                                                <Border Background="Transparent" />
                                                                            </Grid>
                                                                        </Viewbox>
                                                                    </ControlTemplate>
                                                                </ContentControl.Template>
                                                                <!--<ContentControl.Effect>
                                                                    <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="64" ShadowDepth="64" Direction="270" />
                                                                </ContentControl.Effect>-->
                                                                <ContentControl.OpacityMask>
                                                                    <VisualBrush>
                                                                        <VisualBrush.Visual>
                                                                            <Border Background="Black" CornerRadius="16"
                                                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                                                                        </VisualBrush.Visual>
                                                                    </VisualBrush>
                                                                </ContentControl.OpacityMask>
                                                            </ContentControl>
                                                        </Grid>
                                                    </Grid>

                                                    <Grid HorizontalAlignment="Stretch" MaxWidth="{DynamicResource DetailsViewGameOverviewMaxWidth}" MinWidth="260"
                                                            Margin="40,0,40,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="6*" MaxWidth="600" />
                                                            <ColumnDefinition Width="4*" MinWidth="300" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>

                                                        <!--ExtraLogo-->
                                                        <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid" Margin="0,80,0,24" Grid.ColumnSpan="2"
                                                                Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}"
                                                                                Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger
                                                                                Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}"
                                                                                Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}"
                                                                                Value="false">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                                        </Border>
                                                        <!--ExtraLogo Ends-->

                                                        <DockPanel Grid.ColumnSpan="2" Margin="0,0,0,40">
                                                            <StackPanel DockPanel.Dock="Bottom" Name="PART_ElemLinks" Margin="0,40,0,0">
                                                                <!--<TextBlock Text="{DynamicResource LOCLinksLabel}" Margin="0,0,0,0" Style="{DynamicResource DetailViewSectionTitleTextBlockStyle}" />-->
                                                                <Border CornerRadius="{DynamicResource ControlCornerRadius}" Padding="16,16,16,8"
                                                                        Style="{DynamicResource DetailViewCardBorder}" Margin="0,0,0,0">
                                                                    <ItemsControl ItemsSource="{Binding Game.Links}" Margin="-13.6,0,0,0"
                                                                            Visibility="{Binding ElementName=PART_ElemLinks, Path=Visibility}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <WrapPanel Orientation="Horizontal" />
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate DataType="{x:Type Link}">
                                                                                <Button Content="{Binding Name}" Style="{StaticResource PropertyItemLinkButton}"
                                                                                        ToolTip="{Binding Name}"
                                                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.OpenLinkCommand}"
                                                                                        CommandParameter="{Binding}" />
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Border>
                                                            </StackPanel>
                                                            <!--ImageCover-->
                                                            <Image Name="PART_ImageCover" DockPanel.Dock="right" Height="{Settings GameDetailsCoverHeight}"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="16,0,0,0" StretchDirection="Both"
                                                                    Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant">
                                                                <Image.OpacityMask>
                                                                    <VisualBrush>
                                                                        <VisualBrush.Visual>
                                                                            <Border Background="Black" CornerRadius="16"
                                                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Image}}"
                                                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Image}}" />
                                                                        </VisualBrush.Visual>
                                                                    </VisualBrush>
                                                                </Image.OpacityMask>
                                                            </Image>
                                                            <!--ImageCover Ends-->
                                                            <Border x:Name="VideoControls" DockPanel.Dock="Right" Style="{DynamicResource VideoControlPanel}" Margin="8,0,0,0">
                                                                <StackPanel VerticalAlignment="Bottom">

                                                                    <Border Margin="0,0,0,12" Padding="0,0,0,12" BorderThickness="0,0,0,1"
                                                                            BorderBrush="{DynamicResource PopupSeparatorBrush}">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding ElementName=VideoControls, Path=IsMouseOver}" Value="True">
                                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>

                                                                        <StackPanel x:Name="AudioControls" Width="20">
                                                                            <Viewbox Margin="0,4,0,16">
                                                                                <CheckBox
                                                                                        IsChecked="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.IsPlayerMuted, Mode=TwoWay, FallbackValue={StaticResource True}}">
                                                                                    <CheckBox.Template>
                                                                                        <ControlTemplate TargetType="CheckBox">
                                                                                            <Border Background="Transparent">
                                                                                                <TextBlock x:Name="NotMuted" Text="&#xe994;" Style="{StaticResource IconFontStyle}" />
                                                                                            </Border>
                                                                                            <ControlTemplate.Triggers>
                                                                                                <Trigger Property="IsChecked" Value="True">
                                                                                                    <Setter Property="Text" TargetName="NotMuted" Value="&#xe198;" />
                                                                                                </Trigger>
                                                                                            </ControlTemplate.Triggers>
                                                                                        </ControlTemplate>
                                                                                    </CheckBox.Template>
                                                                                </CheckBox>
                                                                            </Viewbox>

                                                                            <Button HorizontalAlignment="Left" x:Name="TrailerPauseButton"
                                                                                    Command="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.VideoPauseCommand, FallbackValue={x:Null}}"
                                                                                    Visibility="{Binding ElementName=TrailerPlayButton, Path=IsEnabled, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                                                                <Button.Template>
                                                                                    <ControlTemplate TargetType="Button">
                                                                                        <Viewbox>
                                                                                            <TextBlock Text="&#xe103;" Style="{StaticResource IconFontStyle}" />
                                                                                        </Viewbox>
                                                                                    </ControlTemplate>
                                                                                </Button.Template>
                                                                            </Button>
                                                                            <Button HorizontalAlignment="Left" x:Name="TrailerPlayButton"
                                                                                    Command="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.VideoPlayCommand, FallbackValue={x:Null}}"
                                                                                    Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                                <Button.Template>
                                                                                    <ControlTemplate TargetType="Button">
                                                                                        <Viewbox>
                                                                                            <TextBlock Text="&#xe102;" Style="{StaticResource IconFontStyle}" />
                                                                                        </Viewbox>
                                                                                    </ControlTemplate>
                                                                                </Button.Template>
                                                                            </Button>
                                                                        </StackPanel>

                                                                    </Border>

                                                                    <ToggleButton x:Name="HeroVideoOnOffTogglePlayer" ToolTip="Video On/Off"
                                                                            Style="{DynamicResource SwitcherToggleButton}" />
                                                                    <TextBlock Text="Video ON" Style="{DynamicResource ActionControlLabelStyle}" Margin="0,8,0,0" />
                                                                </StackPanel>
                                                            </Border>
                                                            <Border x:Name="VideoController" DockPanel.Dock="Right" Style="{DynamicResource VideoControlPanel}" Margin="8,0,0,0">
                                                                <StackPanel VerticalAlignment="Bottom">
                                                                    <ToggleButton x:Name="HeroVideoMiniTogglePlayer" ToolTip="Mini Screen"
                                                                            Style="{DynamicResource SwitcherToggleButton}" />
                                                                    <TextBlock Text="Maximize" Style="{DynamicResource ActionControlLabelStyle}" Margin="0,8,0,0" />
                                                                </StackPanel>
                                                            </Border>
                                                            <ContentControl x:Name="DuplicateHider_ContentControl1" DockPanel.Dock="Right" VerticalAlignment="Bottom"
                                                                            Margin="8,0,0,0" Tag="{DynamicResource DH_ContentControl_Simple_Style}" />
                                                            <!--<ContentControl x:Name="DuplicateHider_SourceSelector" DockPanel.Dock="Right" VerticalContentAlignment="Bottom" Style="{DynamicResource DH_ContentControl_Simple_Style}" />-->
                                                            <!--Players InGame-->
                                                            <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl" DockPanel.Dock="Right" Margin="8,0,0,0" VerticalAlignment="Bottom">
                                                                <ContentControl.Resources>
                                                                    <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                                </ContentControl.Resources>
                                                            </ContentControl>
                                                            <!--Players InGame Ends-->
                                                            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="0,0,0,0">
                                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                                    <Image Name="PART_ImageIcon" MaxWidth="24" MaxHeight="24" Margin="0,0,16,0"
                                                                            RenderOptions.BitmapScalingMode="Fant" />
                                                                    <TextBlock Name="PART_TextDisplayName" Margin="0,0,0,0" FontSize="{DynamicResource FontSizeLarge24}"
                                                                            TextWrapping="Wrap" Style="{DynamicResource DetailsViewHeaderStyle}" />
                                                                </StackPanel>
                                                                <WrapPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                                    <Border Margin="0,0,8,8" VerticalAlignment="Top" Tag="{DynamicResource DetailViewRatingStar}">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Settings DetailsVisibility.CriticScore}" Value="False">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding Game.CriticScore}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <StackPanel.Resources>
                                                                                <SolidColorBrush x:Key="Extras_FilledStarBrush" Color="White" />
                                                                                <SolidColorBrush x:Key="Extras_EmptyStarBrush" Color="White" Opacity="0.2" />
                                                                            </StackPanel.Resources>
                                                                            <ContentControl x:Name="ThemeExtras_CriticRating" Margin="0,2,4,0" />
                                                                            <TextBlock Text="{Binding Game.CriticScore, TargetNullValue='- -', FallbackValue='- -'}"
                                                                                    Margin="0,5,0,2" Style="{DynamicResource GameSubtleInfoTextBlockStyle}" FontSize="12" />
                                                                        </StackPanel>
                                                                    </Border>
                                                                    <Border Margin="0,0,8,8" VerticalAlignment="Top">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                                <Style.Triggers>
                                                                                    <MultiDataTrigger>
                                                                                        <MultiDataTrigger.Conditions>
                                                                                            <Condition Binding="{Binding ElementName=PART_ButtonReleaseDate, Path=Visibility}"
                                                                                                    Value="Collapsed" />
                                                                                            <Condition Binding="{Binding ElementName=PART_ElemPlatform, Path=Visibility}"
                                                                                                    Value="Collapsed" />
                                                                                        </MultiDataTrigger.Conditions>
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </MultiDataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <Button Name="PART_ButtonReleaseDate" Margin="0,0,4,0" Padding="0" BorderThickness="0" Background="{x:Null}"
                                                                                    Style="{DynamicResource PropertyItemSmallButton}" />
                                                                            <StackPanel Name="PART_ElemPlatform" Orientation="Horizontal">
                                                                                <StackPanel.Style>
                                                                                    <Style TargetType="StackPanel">
                                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Settings DetailsVisibility.Platforms}" Value="False">
                                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                            </DataTrigger>
                                                                                            <DataTrigger Binding="{Binding Game.Platforms}" Value="{x:Null}">
                                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </StackPanel.Style>
                                                                                <TextBlock Text="·" Margin="0,3,4,0" Style="{DynamicResource GameSubtleInfoTextBlockStyle}" />
                                                                                <ItemsControl ItemsSource="{Binding Game.Platforms}" Margin="0,0,0,0">
                                                                                    <ItemsControl.ItemsPanel>
                                                                                        <ItemsPanelTemplate>
                                                                                            <WrapPanel Orientation="Horizontal" />
                                                                                        </ItemsPanelTemplate>
                                                                                    </ItemsControl.ItemsPanel>
                                                                                    <ItemsControl.ItemTemplate>
                                                                                        <DataTemplate>
                                                                                            <Button Content="{Binding Name}" Margin="0,0,4,0" Padding="0" BorderThickness="0" Background="{x:Null}"
                                                                                                    Style="{DynamicResource PropertyItemSmallButton}"
                                                                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetPlatformFilterCommand}"
                                                                                                    CommandParameter="{Binding}" />
                                                                                        </DataTemplate>
                                                                                    </ItemsControl.ItemTemplate>
                                                                                </ItemsControl>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </Border>
                                                                    <!--Genres Tags-->
                                                                    <Border Margin="0,0,8,8" VerticalAlignment="Top"
                                                                            Visibility="{Binding ElementName=PART_ElemGenres, Path=Visibility}">
                                                                        <StackPanel Name="PART_ElemGenres" Orientation="Horizontal">
                                                                            <StackPanel.Style>
                                                                                <Style TargetType="StackPanel">
                                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Settings DetailsVisibility.Genres}" Value="False">
                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </StackPanel.Style>
                                                                            <ItemsControl ItemsSource="{Binding Game.Genres}" Margin="0,0,0,0">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <WrapPanel Orientation="Horizontal" />
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <Button Content="{Binding Name}" Margin="0,0,8,0"
                                                                                                Style="{DynamicResource PropertyItemSmallButton}"
                                                                                                Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetGenreFilterCommand}"
                                                                                                CommandParameter="{Binding}" />
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                        </StackPanel>
                                                                    </Border>
                                                                    <!--Genres Tags Ends-->
                                                                    <!--Features by Icons-->
                                                                    <Border Margin="0,0,8,8" VerticalAlignment="Top" HorizontalAlignment="Center"
                                                                            Visibility="{PluginSettings Plugin=LibraryManagement, Path=HasData, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Collapsed}}">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <ItemsControl ItemsSource="{PluginSettings Plugin=LibraryManagement, Path=DataList}"
                                                                                    HorizontalAlignment="Left">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <Image VerticalAlignment="Center" Margin="0,0,8,0.5" ToolTip="{Binding NameAssociated}"
                                                                                                Width="20" Height="20" Source="{Binding IconBitmapImage}" />
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                        </StackPanel>
                                                                    </Border>
                                                                    <!--Features by Icons Ends-->
                                                                </WrapPanel>

                                                            </StackPanel>
                                                        </DockPanel>

                                                        <!--Left Part-->
                                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,40,0">

                                                            <!--Video Part-->
                                                            <Border Panel.ZIndex="99" VerticalAlignment="Top">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Setter Property="Margin" Value="0,0,0,40" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger
                                                                                    Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}"
                                                                                    Value="True">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                <Setter Property="Margin" Value="0,0,0,0" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControlAlternative">
                                                                    <ContentControl.OpacityMask>
                                                                        <VisualBrush>
                                                                            <VisualBrush.Visual>
                                                                                <Border Background="Black" CornerRadius="16"
                                                                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                                        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                                                                            </VisualBrush.Visual>
                                                                        </VisualBrush>
                                                                    </ContentControl.OpacityMask>
                                                                </ContentControl>
                                                            </Border>
                                                            <!--Video Part Ends-->

                                                            <!--Tab Content Part-->
                                                            <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch">

                                                                <TabControl Margin="0,0,0,16" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                                                        Style="{StaticResource DetailViewTabControl}">

                                                                    <!--Tab Overview-->
                                                                    <TabItem Header="{DynamicResource LOCOverviewLabel}" x:Name="DescriptionTab" FontSize="16">

                                                                        <StackPanel Margin="0,24,0,0">

                                                                            <StackPanel x:Name="DescriptionContent" Margin="0,0,0,0">
                                                                                <StackPanel Name="PART_ElemDescription">
                                                                                    <HtmlTextView Name="PART_HtmlDescription" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                                                                                            HtmlFontSize="{DynamicResource FontSize}" HtmlFontFamily="{DynamicResource FontFamily}"
                                                                                            HtmlForeground="{DynamicResource TextColor}"
                                                                                            LinkForeground="{DynamicResource AccentSelectedColor}"
                                                                                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                                            ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                                                                </StackPanel>
                                                                            </StackPanel>

                                                                            <StackPanel Margin="0,24,0,0" Visibility="{Binding ElementName=GameRelationsVisibilityProxy, Path=Tag}">

                                                                                <TextBlock Text="{DynamicResource LOCGameRelations_RelatedGamesLabel}" Margin="0,0,0,0"
                                                                                        Style="{DynamicResource DetailViewSectionTitleTextBlockStyle}" />
                                                                                <Border CornerRadius="{DynamicResource ControlCornerRadius}" Padding="16"
                                                                                        Style="{DynamicResource DetailViewCardBorder}" Margin="0,12,0,0">
                                                                                    <StackPanel>
                                                                                        <TextBlock x:Name="GameRelationsVisibilityProxy" Visibility="Collapsed">
                                                                                            <TextBlock.Style>
                                                                                                <Style TargetType="TextBlock">
                                                                                                    <Setter Property="Tag" Value="Collapsed" />
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger
                                                                                                                Binding="{Binding ElementName=Panel_GameRelations_SimilarGamesControl, Path=Visibility}"
                                                                                                                Value="Visible">
                                                                                                            <Setter Property="Tag" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger
                                                                                                                Binding="{Binding ElementName=Panel_GameRelations_SameSeriesControl, Path=Visibility}"
                                                                                                                Value="Visible">
                                                                                                            <Setter Property="Tag" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger
                                                                                                                Binding="{Binding ElementName=Panel_GameRelations_SameDeveloperControl, Path=Visibility}"
                                                                                                                Value="Visible">
                                                                                                            <Setter Property="Tag" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger
                                                                                                                Binding="{Binding ElementName=Panel_GameRelations_SamePublisherControl, Path=Visibility}"
                                                                                                                Value="Visible">
                                                                                                            <Setter Property="Tag" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </TextBlock.Style>
                                                                                        </TextBlock>
                                                                                        <Expander x:Name="Panel_GameRelations_SimilarGamesControl"
                                                                                                Header="{DynamicResource LOCGameRelations_SimilarGamesLabel}" IsExpanded="True"
                                                                                                Margin="0,8,0,0"

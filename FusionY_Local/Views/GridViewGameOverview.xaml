<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">

    <Style TargetType="{x:Type GridViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewGameOverview}">
                    <Border x:Name="GridtoDetailBorder" Padding="0" BorderBrush="{DynamicResource PanelSeparatorBrush}"
                            d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="1,0,0,0" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Settings GridViewDetailsPosition}" Value="Left">
                                        <Setter Property="BorderThickness" Value="0,0,1,0" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Settings ShowPanelSeparators}" Value="False">
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>


                        <DockPanel>
                            <Grid DockPanel.Dock="Top">

                                <!--Detailed GridOverview-->
                                <DockPanel>
                                    <DockPanel.Style>
                                        <Style TargetType="DockPanel">
                                            <Style.Triggers>
                                                <Trigger Property="DataContext" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DockPanel.Style>

                                    <Grid Margin="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid>
                                            <Grid.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0.95">
                                                    <GradientStop Offset="0" Color="#00000000" />
                                                    <GradientStop Offset="1" Color="#FF000000" />
                                                </LinearGradientBrush>
                                            </Grid.OpacityMask>
                                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Grid.Row="0"
                                                    Style="{DynamicResource DetailsScrollViewer}" d:DesignWidth="1280" d:DesignHeight="1280"
                                                    d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}" x:Name="PART_ScrollViewHost">
                                                <Grid>
                                                    <FadeImage x:Name="PART_ImageBackground" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                        <FadeImage.ImageOpacityMask>
                                                            <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="1">
                                                                <RadialGradientBrush.GradientStops>
                                                                    <GradientStop Color="Black" Offset="0.3" />
                                                                    <GradientStop Color="Transparent" Offset="1" />
                                                                </RadialGradientBrush.GradientStops>
                                                            </RadialGradientBrush>
                                                        </FadeImage.ImageOpacityMask>
                                                    </FadeImage>

                                                    <Grid Height="40" Margin="40,0,40,0" HorizontalAlignment="Left" VerticalAlignment="Top">


                                                        <ContentControl x:Name="DuplicateHider_SourceSelector" Margin="10" />
                                                    </Grid>

                                                    <Grid HorizontalAlignment="Stretch" MaxWidth="{DynamicResource DetailsViewGameOverviewMaxWidth}" MinWidth="260"
                                                            Margin="40,0,40,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="660" />
                                                            <ColumnDefinition Width="*" MinWidth="300"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>

                                                        <!--ExtraLogo-->
                                                        <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid" Margin="0,80,0,24" Grid.ColumnSpan="2"
                                                                Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}"
                                                                                Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger
                                                                                Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}"
                                                                                Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}"
                                                                                Value="false">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                                        </Border>
                                                        <!--ExtraLogo Ends-->

                                                        <DockPanel Margin="0,0,0,40" Grid.Row="1" Grid.ColumnSpan="2">

                                                            <WrapPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,0,0,0">

                                                                <Border Margin="0,0,8,8" VerticalAlignment="Top" Tag="{DynamicResource DetailViewRatingStar}">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Settings DetailsVisibility.CriticScore}" Value="False">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Game.CriticScore}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <StackPanel.Resources>
                                                                            <SolidColorBrush x:Key="Extras_FilledStarBrush" Color="White" />
                                                                            <SolidColorBrush x:Key="Extras_EmptyStarBrush" Color="White" Opacity="0.2" />
                                                                        </StackPanel.Resources>
                                                                        <ContentControl x:Name="ThemeExtras_CriticRating" Margin="0,2,4,0" />
                                                                        <TextBlock Text="{Binding Game.CriticScore, TargetNullValue='- -', FallbackValue='- -'}" Margin="0,3,0,2"
                                                                                Style="{DynamicResource GameSubtleInfoTextBlockStyle}" />
                                                                    </StackPanel>
                                                                </Border>

                                                                <Border Margin="0,0,8,8" VerticalAlignment="Top">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                            <Style.Triggers>
                                                                                <MultiDataTrigger>
                                                                                    <MultiDataTrigger.Conditions>
                                                                                        <Condition Binding="{Binding ElementName=PART_ButtonReleaseDate, Path=Visibility}"
                                                                                                Value="Collapsed" />
                                                                                        <Condition Binding="{Binding ElementName=PART_ElemPlatform, Path=Visibility}"
                                                                                                Value="Collapsed" />
                                                                                    </MultiDataTrigger.Conditions>
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </MultiDataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Button Name="PART_ButtonReleaseDate" Margin="0,2,4,0" Padding="0" BorderThickness="0"
                                                                                Style="{DynamicResource PropertyItemSmallButton}" />
                                                                        <StackPanel Name="PART_ElemPlatform" Orientation="Horizontal">
                                                                            <StackPanel.Style>
                                                                                <Style TargetType="StackPanel">
                                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Settings DetailsVisibility.Platforms}" Value="False">
                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Game.Platforms}" Value="{x:Null}">
                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </StackPanel.Style>
                                                                            <TextBlock Text="·" Margin="0,2,4,0" Style="{DynamicResource GameSubtleInfoTextBlockStyle}" />
                                                                            <ItemsControl ItemsSource="{Binding Game.Platforms}" Margin="0,0,0,0">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <WrapPanel Orientation="Horizontal" />
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <Button Content="{Binding Name}" Margin="0,2,4,0" Padding="0" BorderThickness="0"
                                                                                                Style="{DynamicResource PropertyItemSmallButton}"
                                                                                                Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetPlatformFilterCommand}"
                                                                                                CommandParameter="{Binding}" />
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                                <!--Genres Tags-->
                                                                <Border Margin="0,0,8,8" VerticalAlignment="Top" Visibility="{Binding ElementName=PART_ElemGenres, Path=Visibility}">
                                                                    <StackPanel Name="PART_ElemGenres" Orientation="Horizontal">
                                                                        <StackPanel.Style>
                                                                            <Style TargetType="StackPanel">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Settings DetailsVisibility.Genres}" Value="False">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </StackPanel.Style>

                                                                        <ItemsControl ItemsSource="{Binding Game.Genres}" Margin="0,0,0,0">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <WrapPanel Orientation="Horizontal" />
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Button Content="{Binding Name}" Margin="0,0,8,0"
                                                                                            Style="{DynamicResource PropertyItemSmallButton}"
                                                                                            Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetGenreFilterCommand}"
                                                                                            CommandParameter="{Binding}" />
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>

                                                                    </StackPanel>
                                                                </Border>
                                                                <!--Genres Tags Ends-->
                                                                <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl">
                                                                    <ContentControl.Resources>
                                                                        <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                                    </ContentControl.Resources>
                                                                </ContentControl>

                                                                <Border Margin="0,0,8,8" VerticalAlignment="Top"
                                                                        Visibility="{PluginSettings Plugin=LibraryManagement, Path=HasData, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Collapsed}}">

                                                                    <StackPanel Orientation="Horizontal">

                                                                        <ItemsControl ItemsSource="{PluginSettings Plugin=LibraryManagement, Path=DataList}"
                                                                                HorizontalAlignment="Left">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <WrapPanel Orientation="Horizontal" />
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Image VerticalAlignment="Center" Margin="0,0,8,0.5" ToolTip="{Binding NameAssociated}"
                                                                                            Width="20" Height="20" Source="{Binding IconBitmapImage}" />
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </StackPanel>

                                                                </Border>

                                                            </WrapPanel>

                                                            <Image Name="PART_ImageIcon" MaxWidth="24" MaxHeight="24 " VerticalAlignment="Top" DockPanel.Dock="Left"
                                                                    RenderOptions.BitmapScalingMode="Fant" Margin="0,4,16,16" />

                                                            <TextBlock Name="PART_TextDisplayName" FontFamily="{DynamicResource FontFamily}" DockPanel.Dock="Top"
                                                                    FontSize="{DynamicResource FontSizeLarge24}" FontWeight="Bold" Margin="0,0,0,16" TextWrapping="Wrap"
                                                                    Foreground="{DynamicResource SelectedBrush}" />

                                                        </DockPanel>

                                                        <!--Left Part-->
                                                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,40,0">



                                                            <!--Video Part-->
                                                            <Border Panel.ZIndex="99" Margin="0,0,0,40" VerticalAlignment="Top">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger
                                                                                    Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}"
                                                                                    Value="False">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger
                                                                                    Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}"
                                                                                    Value="True">
                                                                                <Setter Property="Control.Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                            <DataTrigger
                                                                                    Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableAlternativeDetailsVideoPlayer, FallbackValue=False}"
                                                                                    Value="True">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControl">
                                                                    <ContentControl.OpacityMask>
                                                                        <VisualBrush>
                                                                            <VisualBrush.Visual>
                                                                                <Border Background="Black" CornerRadius="16"
                                                                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                                        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                                                                            </VisualBrush.Visual>
                                                                        </VisualBrush>
                                                                    </ContentControl.OpacityMask>
                                                                </ContentControl>
                                                            </Border>
                                                            <!--Video Part Ends-->


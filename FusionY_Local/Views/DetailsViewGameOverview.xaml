<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">
    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.OpacityMask>
                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0.95">
                                    <GradientStop Offset="0" Color="#00000000" />
                                    <GradientStop Offset="1" Color="#FF000000" />
                                </LinearGradientBrush>
                            </Grid.OpacityMask>
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Style="{DynamicResource DetailsScrollViewer}"
                                    d:DesignWidth="1280" d:DesignHeight="1280" d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                    x:Name="PART_ScrollViewHost">
                                <Grid>
                                    <!--HeroView-->
                                    <Grid x:Name="HeroBanner" VerticalAlignment="Top">
                                        <Grid.OpacityMask>
                                            <ImageBrush ImageSource="../Images/Hero-mask.png" />
                                        </Grid.OpacityMask>
                                        <FadeImage x:Name="PART_ImageBackground" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="top" />
                                        <Grid x:Name="GameVideo">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Width" Value="Auto" />
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Setter Property="Margin" Value="0,0,0,0" />
                                                    <Setter Property="Opacity" Value="1" />
                                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=HeroVideoOnOffTogglePlayer, Path=IsChecked}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <!--<DataTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.2" Duration="0:0:0.3" />
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                                                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Collapsed}" />
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.ExitActions>-->
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=HeroVideoMiniTogglePlayer, Path=IsChecked}" Value="False">
                                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                                            <Setter Property="VerticalAlignment" Value="Top" />
                                                            <Setter Property="Width" Value="500" />
                                                            <Setter Property="Margin" Value="0,120,40,0" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControl">
                                                <ContentControl.Template>
                                                    <ControlTemplate TargetType="ContentControl">
                                                        <Viewbox Stretch="UniformToFill" VerticalAlignment="Top">
                                                            <ContentPresenter />
                                                        </Viewbox>
                                                    </ControlTemplate>
                                                </ContentControl.Template>
                                                <!--<ContentControl.Effect>
                                                    <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="64" ShadowDepth="64" Direction="270" />
                                                </ContentControl.Effect>-->
                                                <ContentControl.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Border Background="Black" CornerRadius="16"
                                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </ContentControl.OpacityMask>
                                            </ContentControl>
                                        </Grid>
                                    </Grid>
                                    <Border x:Name="VideoController" Margin="0,80,40,0" Padding="16,0,16,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="36"
                                            CornerRadius="18" Background="{DynamicResource ControlBackgroundBrush}">
                                        <!--<Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=GameVideo, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>-->
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}" Value="True">
                                                        <Setter Property="Control.Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                            Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableAlternativeDetailsVideoPlayer, FallbackValue=False}"
                                                            Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                                <TextBlock Text="Video ON" VerticalAlignment="Center" Style="{DynamicResource BaseTextBlockStyle}" Margin="0,0,8,0" />
                                                <ToggleButton x:Name="HeroVideoOnOffTogglePlayer" ToolTip="Video On/Off" Style="{DynamicResource SwitcherToggleButton}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="Maximize" VerticalAlignment="Center" Style="{DynamicResource BaseTextBlockStyle}" Margin="0,0,8,0" />
                                                <ToggleButton x:Name="HeroVideoMiniTogglePlayer" ToolTip="Mini Screen" Style="{DynamicResource SwitcherToggleButton}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <!--HeroView Ends-->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Settings DetailsListWitdh}" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}" />
                                            <!--<RowDefinition MinHeight="{Binding ElementName=HeroBanner, Path=ActualHeight}"/>-->
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <!--ExtraLogo-->
                                        <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid" Grid.Column="1" Margin="40,80,40,24"
                                                Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                        </Border>
                                        <!--ExtraLogo Ends-->
                                        <!--ImageCover-->
                                        <Image Name="PART_ImageCover" Height="{Settings GameDetailsCoverHeight}" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom" Margin="0,0,40,32" StretchDirection="Both" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant">
                                            <Image.OpacityMask>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Border Background="Black" CornerRadius="16"
                                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Image}}"
                                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Image}}" />
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Image.OpacityMask>
                                        </Image>
                                        <!--ImageCover Ends-->
                                        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="40,0,40,24">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <Image Name="PART_ImageIcon" MaxWidth="24" MaxHeight="24" Margin="0,0,16,0" RenderOptions.BitmapScalingMode="Fant" />
                                                <TextBlock Name="PART_TextDisplayName" Margin="0,0,0,0" FontSize="{DynamicResource FontSizeLarge24}"
                                                        Style="{DynamicResource DetailsViewHeaderStyle}" />
                                            </StackPanel>
                                            <WrapPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Margin="0,0,8,8" VerticalAlignment="Top" Tag="{DynamicResource DetailViewRatingStar}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Settings DetailsVisibility.CriticScore}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Game.CriticScore}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.Resources>
                                                            <SolidColorBrush x:Key="Extras_FilledStarBrush" Color="White" />
                                                            <SolidColorBrush x:Key="Extras_EmptyStarBrush" Color="White" Opacity="0.2" />
                                                        </StackPanel.Resources>
                                                        <ContentControl x:Name="ThemeExtras_CriticRating" Margin="0,2,4,0" />
                                                        <TextBlock Text="{Binding Game.CriticScore, TargetNullValue='- -', FallbackValue='- -'}" Margin="0,3,0,2"
                                                                Style="{DynamicResource GameSubtleInfoTextBlockStyle}"/>
                                                    </StackPanel>
                                                </Border>
                                                <Border Margin="0,0,8,8" VerticalAlignment="Top">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding ElementName=PART_ButtonReleaseDate, Path=Visibility}" Value="Collapsed" />
                                                                        <Condition Binding="{Binding ElementName=PART_ElemPlatform, Path=Visibility}" Value="Collapsed" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Name="PART_ButtonReleaseDate" Margin="0,2,4,0" Padding="0" BorderThickness="0"
                                                                Style="{DynamicResource PropertyItemSmallButton}" />
                                                        <StackPanel Name="PART_ElemPlatform" Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Settings DetailsVisibility.Platforms}" Value="False">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Game.Platforms}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="·" Margin="0,2,4,0" Style="{DynamicResource GameSubtleInfoTextBlockStyle}" />
                                                            <ItemsControl ItemsSource="{Binding Game.Platforms}" Margin="0,0,0,0">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel Orientation="Horizontal" />
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Button Content="{Binding Name}" Margin="0,2,4,0" Padding="0" BorderThickness="0"
                                                                                Style="{DynamicResource PropertyItemSmallButton}"
                                                                                Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetPlatformFilterCommand}"
                                                                                CommandParameter="{Binding}" />
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                                <!--Genres Tags-->
                                                <Border Margin="0,0,8,8" VerticalAlignment="Top" Visibility="{Binding ElementName=PART_ElemGenres, Path=Visibility}">
                                                    <StackPanel Name="PART_ElemGenres" Orientation="Horizontal">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Settings DetailsVisibility.Genres}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <ItemsControl ItemsSource="{Binding Game.Genres}" Margin="0,0,0,0">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Orientation="Horizontal" />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Button Content="{Binding Name}" Margin="0,0,8,0" Style="{DynamicResource PropertyItemSmallButton}"
                                                                            Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetGenreFilterCommand}"
                                                                            CommandParameter="{Binding}" />
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Border>
                                                <!--Genres Tags Ends-->
                                                <!--Players InGame-->
                                                <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl">
                                                    <ContentControl.Resources>
                                                        <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                    </ContentControl.Resources>
                                                </ContentControl>
                                                <!--Players InGame Ends-->
                                                <!--Features by Icons-->
                                                <Border Margin="0,0,8,8" VerticalAlignment="Top" HorizontalAlignment="Center"
                                                        Visibility="{PluginSettings Plugin=LibraryManagement, Path=HasData, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Collapsed}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <ItemsControl ItemsSource="{PluginSettings Plugin=LibraryManagement, Path=DataList}" HorizontalAlignment="Left">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Image VerticalAlignment="Center" Margin="0,0,8,0.5" ToolTip="{Binding NameAssociated}" Width="20" Height="20"
                                                                            Source="{Binding IconBitmapImage}" />
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Border>
                                                <!--Features by Icons Ends-->
                                            </WrapPanel>
                                            <!--<ContentControl x:Name="DuplicateHider_SourceSelector" 
                                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                                        VerticalContentAlignment="Center"   
                                                        Margin="0,16,0,0"  
                                                        Height="28"
                                                        RenderOptions.BitmapScalingMode="Fant" />-->
                                        </StackPanel>
                                        <!--<Grid Grid.Row="2" Grid.Column="1" MaxWidth="{DynamicResource DetailsViewGameOverviewMaxWidth}">-->
                                        <Grid Grid.Row="2" Grid.Column="1" Margin="40,0,40,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6*" />
                                                <ColumnDefinition Width="4*" MinWidth="300" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.ColumnSpan="2" Name="PART_ElemLinks" Margin="0,0,0,40">
                                                <!--<TextBlock Text="{DynamicResource LOCLinksLabel}" Margin="0,0,0,0" Style="{DynamicResource DetailViewSectionTitleTextBlockStyle}" />-->
                                                <Border CornerRadius="{DynamicResource ControlCornerRadius}" Padding="16,16,16,8" Style="{DynamicResource DetailViewCardBorder}"
                                                        Margin="0,0,0,0">
                                                    <ItemsControl ItemsSource="{Binding Game.Links}" Margin="-13.6,0,0,0"
                                                            Visibility="{Binding ElementName=PART_ElemLinks, Path=Visibility}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type Link}">
                                                                <Button Content="{Binding Name}" Style="{StaticResource PropertyItemLinkButton}" ToolTip="{Binding Name}"
                                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.OpenLinkCommand}"
                                                                        CommandParameter="{Binding}" />
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Border>
                                            </StackPanel>
                                            <!--Left Part-->
                                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,40,0">
                                                
                                                <!--Tab Content Part-->
                                                <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                                    <TabControl Margin="0,0,0,16" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                                            Style="{StaticResource DetailViewTabControl}">
                                                        <!--Tab Overview-->
                                                        <TabItem Header="{DynamicResource LOCOverviewLabel}" x:Name="DescriptionTab" FontSize="16">
                                                            <StackPanel Margin="0,24,0,0">
                                                                <StackPanel x:Name="DescriptionContent" Margin="0,0,0,0">
                                                                    <StackPanel Name="PART_ElemDescription">
                                                                        <HtmlTextView Name="PART_HtmlDescription" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                                                                                HtmlFontSize="{DynamicResource FontSize}" HtmlFontFamily="{DynamicResource FontFamily}"
                                                                                HtmlForeground="{DynamicResource TextColor}" LinkForeground="{DynamicResource AccentSelectedColor}"
                                                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                                ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                                                    </StackPanel>
                                                                </StackPanel>
                                                                <StackPanel Margin="0,24,0,24" Visibility="{Binding ElementName=GameRelationsVisibilityProxy, Path=Tag}">
                                                                    <TextBlock Text="{DynamicResource LOCGameRelations_RelatedGamesLabel}" Margin="0,0,0,0"
                                                                            Style="{DynamicResource DetailViewSectionTitleTextBlockStyle}" />
                                                                    <Border CornerRadius="{DynamicResource ControlCornerRadius}" Padding="16"
                                                                            Style="{DynamicResource DetailViewCardBorder}" Margin="0,12,0,0">
                                                                        <StackPanel>
                                                                            <TextBlock x:Name="GameRelationsVisibilityProxy" Visibility="Collapsed">
                                                                                <TextBlock.Style>
                                                                                    <Style TargetType="TextBlock">
                                                                                        <Setter Property="Tag" Value="Collapsed" />
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger
                                                                                                    Binding="{Binding ElementName=Panel_GameRelations_SimilarGamesControl, Path=Visibility}"
                                                                                                    Value="Visible">
                                                                                                <Setter Property="Tag" Value="Visible" />
                                                                                            </DataTrigger>
                                                                                            <DataTrigger
                                                                                                    Binding="{Binding ElementName=Panel_GameRelations_SameSeriesControl, Path=Visibility}"
                                                                                                    Value="Visible">
                                                                                                <Setter Property="Tag" Value="Visible" />
                                                                                            </DataTrigger>
                                                                                            <DataTrigger
                                                                                                    Binding="{Binding ElementName=Panel_GameRelations_SameDeveloperControl, Path=Visibility}"
                                                                                                    Value="Visible">
                                                                                                <Setter Property="Tag" Value="Visible" />
                                                                                            </DataTrigger>
                                                                                            <DataTrigger
                                                                                                    Binding="{Binding ElementName=Panel_GameRelations_SamePublisherControl, Path=Visibility}"
                                                                                                    Value="Visible">
                                                                                                <Setter Property="Tag" Value="Visible" />
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </TextBlock.Style></TextBlock>
                                                                            <Expander x:Name="Panel_GameRelations_SimilarGamesControl"
                                                                                    Header="{DynamicResource LOCGameRelations_SimilarGamesLabel}" IsExpanded="True" Margin="0,8,0,0" FontSize="14"
                                                                                    Visibility="{PluginSettings Plugin=GameRelations, Path=SimilarGamesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                                <ContentControl x:Name="GameRelations_SimilarGamesControl" Margin="0,8,0,8" />
                                                                            </Expander>
                                                                            <Expander x:Name="Panel_GameRelations_SameSeriesControl"
                                                                                    Header="{DynamicResource LOCGameRelations_SameSeriesLabel}" IsExpanded="True" Margin="0,8,0,0"
                                                                                    Visibility="{PluginSettings Plugin=GameRelations, Path=SameSeriesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                                <ContentControl x:Name="GameRelations_SameSeriesControl" Margin="0,8,0,8" />
                                                                            </Expander>
                                                                            <Expander x:Name="Panel_GameRelations_SameDeveloperControl"
                                                                                    Header="{DynamicResource LOCGameRelations_SameDeveloperLabel}" IsExpanded="True"
                                                                                    Margin="0,8,0,0"
                                                                                    Visibility="{PluginSettings Plugin=GameRelations, Path=SameDeveloperControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                                <ContentControl x:Name="GameRelations_SameDeveloperControl" Margin="0,8,0,8" />
                                                                            </Expander>
                                                                            <Expander x:Name="Panel_GameRelations_SamePublisherControl"
                                                                                    Header="{DynamicResource LOCGameRelations_SamePublisherLabel}" IsExpanded="True"
                                                                                    Margin="0,8,0,0"
                                                                                    Visibility="{PluginSettings Plugin=GameRelations, Path=SamePublisherControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                                <ContentControl x:Name="GameRelations_SamePublisherControl" Margin="0,8,0,8" />
                                                                            </Expander>
                                                                        </StackPanel>
                                                                    </Border>
                                                                    
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </TabItem>
                                                        <!--Tab Overview Ends-->
                                                        <!--Tab Notes-->
                                                        <TabItem Header="{DynamicResource LOCNotesLabel}" FontSize="16"
                                                                Visibility="{Binding ElementName=NotesVisibilityProxy, Path=Tag}">
                                                            <StackPanel Margin="0,24,0,0">
                                                                <!--<TextBlock x:Name="NotesVisibilityProxy" Visibility="Collapsed">
                                             <TextBlock.Style>
                                                 <Style TargetType="TextBlock">
                                                     <Setter Property="Tag" Value="Collapsed" />
                                                     <Style.Triggers>
                                                         <DataTrigger Binding="{Binding ElementName=PART_TextNotes, Path=Visibility}" Value="Visible">
                                                             <Setter Property="Tag" Value="Visible" />
                                                         </DataTrigger>
                                                         <DataTrigger Binding="{PluginSettings Plugin=PlayNotes, Path=IsControlVisible, FallbackValue=False}" Value="True">
                                                             <Setter Property="Tag" Value="Visible" />
                                                         </DataTrigger>
                                                     </Style.Triggers>
                                                 </Style>
                                             </TextBlock.Style>
                                         </TextBlock>-->
                                                                <TextBox Name="PART_TextNotes" IsReadOnly="True" BorderThickness="0" AcceptsReturn="True" TextWrapping="Wrap"
                                                                        Margin="-4,0,-4,0" Padding="0" Background="Transparent" />
                                                            </StackPanel>
                                                        </TabItem>
                                                        <!--Tab Notes Ends-->
                                                        <TabItem Header="{DynamicResource LOCSuccessStoryAchievements}" FontSize="16"
                                                                Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <StackPanel Margin="0,24,0,0">
                                                                <ContentControl x:Name="SuccessStory_PluginProgressBar" DockPanel.Dock="Bottom" Margin="0,16,0,0"
                                                                        VerticalAlignment="Center" Height="20" />
                                                                <ContentControl x:Name="SuccessStory_PluginCompactList" DockPanel.Dock="Bottom" Margin="0,0,0,0" />
                                                                <ContentControl x:Name="SuccessStory_PluginCompactLocked" Margin="0,0,0,24" />
                                                                <ContentControl x:Name="SuccessStory_PluginUserStats" Margin="0,0,0,24" />
                                                                <ContentControl x:Name="SuccessStory_PluginList" Margin="0,0,0,24" MinHeight="300" />
                                                                <ContentControl x:Name="SuccessStory_PluginChart" Margin="0,0,0,24" />
                                                            </StackPanel>

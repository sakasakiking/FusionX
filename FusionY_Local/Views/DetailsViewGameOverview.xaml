                                                <!--Tab Content Part-->
                                                <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch">

                                                    <TabControl Margin="0,0,0,16" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                                                Style="{StaticResource DetailViewTabControl}">

                                                        <!--Tab Overview-->
                                                        <TabItem Header="{DynamicResource LOCOverviewLabel}" x:Name="DescriptionTab" FontSize="16">

                                                            <StackPanel Margin="0,24,0,0">

                                                                <StackPanel x:Name="DescriptionContent" Margin="0,0,0,0" >
                                                                    <StackPanel Name="PART_ElemDescription">
                                                                        <HtmlTextView Name="PART_HtmlDescription" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                                                       HtmlFontSize="{DynamicResource FontSize}"
                                                       HtmlFontFamily="{DynamicResource FontFamily}"
                                                       HtmlForeground="{DynamicResource TextColor}"
                                                       LinkForeground="{DynamicResource AccentSelectedColor}" 
                                                       ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                       ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                                                                    </StackPanel>
                                                                </StackPanel>

                                                                <StackPanel Margin="0,24,0,0" Visibility="{Binding ElementName=GameRelationsVisibilityProxy, Path=Tag}">

